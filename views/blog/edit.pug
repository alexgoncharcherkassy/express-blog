extends ../layout

block content
    .page-header
        h3 Edit Article

    form.form-horizontal(method='POST')
        input(type='hidden', name='_csrf', value=_csrf)
        .form-group
            label.col-sm-1.control-label(for='title') Title
            .col-sm-11
                input.form-control(type='text', name='title', id='title', value=blog.title)
        .form-group
            label.col-sm-1.control-label(for='bodyBlog') Text
            .col-sm-11
                textarea.form-control(name='bodyBlog', id='bodyBlog', rows='7')=blog.bodyBlog
        .form-group
            .col-sm-offset-1.col-sm-11
                button.btn.btn-primary(type='submit')
                    i.fa.fa-pencil
                    | Update Article
